model Admin {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    profileImage  String?
    contactNumber String?
    isDeleted     Boolean  @default(false)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    user User @relation(fields: [email], references: [email])

    @@map("admins")
}